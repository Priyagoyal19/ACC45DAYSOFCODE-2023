#include <iostream>
using namespace std;

int main() {
    int T;
    cin >> T;

    while (T--) {
        int X;
        cin >> X;
        int incorrect = 0;

        if (X % 3 == 0) {
            incorrect = 0;
        } else if (X % 3 == 1) {
            incorrect = 2;
        } else {
            incorrect = 1;
        }

        cout << incorrect << endl;
    }
    return 0;
}
